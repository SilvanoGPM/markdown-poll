{
  "name": "markdown-poll",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "up": "docker compose -f environment/dev/docker-compose.yml up -d",
    "down": "docker compose -f environment/dev/docker-compose.yml down -d",
    "migration:create": "node-pg-migrate --migrations-dir ./database/migrations create",
    "migration:run": "node -r dotenv-expand/config infra/scripts/wait-for-db-connection-ready.js && node-pg-migrate up --envPath ./.env -m database/migrations/ 2>migrations.log",
    "migration:dry-run": "node-pg-migrate up --dry-run --envPath ./.env -m database/migrations",
    "migration:seed": "node -r dotenv-expand/config database/scripts/seed-database.js"
  },
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv-expand": "^10.0.0",
    "next": "13.5.5",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10",
    "eslint": "^8",
    "eslint-config-next": "13.5.5",
    "husky": "^8.0.3",
    "postcss": "^8",
    "tailwindcss": "^3",
    "typescript": "^5"
  }
}
